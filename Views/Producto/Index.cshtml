@{
    ViewData["Title"] = "Home Page";
}

@model TechStore.Models.Producto

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agregar Producto</title>
</head>
<body>
    <h2>Agregar Producto</h2>
    <form asp-action="Create" method="post">
        <div>
            <label asp-for="Nombre">Nombre del Producto:</label>
            <input asp-for="Nombre" required>
            <span asp-validation-for="Nombre"></span>
        </div>
        <div>
            <label asp-for="Descripcion">Descripción:</label>
            <textarea asp-for="Descripcion" required></textarea>
            <span asp-validation-for="Descripcion"></span>
        </div>
        <div>
            <label asp-for="Precio">Precio:</label>
            <input asp-for="Precio" type="number" step="0.01" min="0.01" required>
            <span asp-validation-for="Precio"></span>
        </div>
        <div>
            <label>IGV:</label>
            <input id="igv" type="text" readonly>
        </div>
        <button type="submit">Guardar Producto</button>
    </form>

    <script>
        
        document.getElementById('Precio').addEventListener('change', function() {
            var precio = parseFloat(this.value);
            var igv = precio * 0.18; 
            document.getElementById('igv').value = igv.toFixed(2); 
        });
    </script>
</body>
</html>
